{
    "Routes": [
        {
            "UpstreamHttpMethod": [
                "Post"
            ],
            "UpstreamPathTemplate": "/messenger/v1/resources",
            "DownstreamPathTemplate": "/publish",
            "DownstreamScheme": "$MESSENGER_SCHEME",
            "DownstreamHostAndPorts": [
                {
                    "Host": "$MESSENGER_HOST",
                    "Port": "$MESSENGER_PORT"
                }
            ]
        },
        {
            "UpstreamHttpMethod": [
                "Get"
            ],
            "UpstreamPathTemplate": "/messenger/v1/test",
            "DownstreamPathTemplate": "/api/test",
            "DownstreamScheme": "$MESSENGER_SCHEME",
            "DownstreamHostAndPorts": [
                {
                    "Host": "$MESSENGER_HOST",
                    "Port": "$MESSENGER_PORT"
                }
            ]
        }
    ]
}