{
    "Routes": [
        {
            "UpstreamHttpMethod": [
                "Post"
            ],
            "UpstreamPathTemplate": "/messaging/v1/tasks/create",
            "DownstreamPathTemplate": "/publish/tasks/create",
            "DownstreamScheme": "$MESSAGING_SCHEME",
            "DownstreamHostAndPorts": [
                {
                    "Host": "$MESSAGING_HOST",
                    "Port": "$MESSAGING_PORT"
                }
            ]
        },
        {
            "UpstreamHttpMethod": [
                "Post"
            ],
            "UpstreamPathTemplate": "/messaging/v1/tasks/delete",
            "DownstreamPathTemplate": "/publish/tasks/delete",
            "DownstreamScheme": "$MESSAGING_SCHEME",
            "DownstreamHostAndPorts": [
                {
                    "Host": "$MESSAGING_HOST",
                    "Port": "$MESSAGING_PORT"
                }
            ]
        }
    ]
}